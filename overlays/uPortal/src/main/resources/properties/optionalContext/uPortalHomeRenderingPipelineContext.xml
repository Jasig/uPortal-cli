<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <!--
     | This Spring configuration file defines the beans for the uPortal-home Rendering Pipeline.
     |
     | uPortal-home is disabled by default.  To enable it, add 'uPortal-home.enabled=true' to
     | global.properties.  When enabled, requests targeting anything *besides* a single portlet in
     | MAXIMIZED window state must go to uPortal-home.
     +-->
    <bean id="uPortalHomeEnabledPredicate" class="org.apereo.portal.rendering.predicates.SimplePredicate">
        <property name="value" value="${uPortal-home.enabled:false}" />
    </bean>
    <bean id="focusedOnOnePortletPredicate" class="org.apereo.portal.rendering.predicates.FocusedOnOnePortletPredicate" />
    <bean id="notFocusedOnOnePortletPredicate" class="java.util.function.Predicate" factory-method="negate" factory-bean="focusedOnOnePortletPredicate" />
    <bean id="uPortalHomeDashboardBranchPoint" class="org.apereo.portal.rendering.RenderingPipelineBranchPoint">
        <property name="order" value="2" />
        <property name="predicate">
            <bean class="java.util.function.Predicate" factory-method="and" factory-bean="uPortalHomeEnabledPredicate">
                <constructor-arg ref="notFocusedOnOnePortletPredicate"/>
            </bean>
        </property>
        <property name="alternatePipe">
            <bean class="org.apereo.portal.rendering.RedirectRenderingPipelineTerminator">
                <property name="redirectTo" value="${uPortal-home.landing.page:/web}" />
            </bean>
        </property>
    </bean>

</beans>
